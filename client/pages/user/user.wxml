<view wx:if="{{!userInfo}}">
  <view class="unlogin-card">
    <view class="unlogin-head"></view>
    <view class="unlogin-info">
      <view class="unlogin-text">未登录</view>
      <view class="unlogin-tips">点击微信登录后方可查看影评</view>
    </view>
  </view>
  <button class='unlogin-btn' open-type='getUserInfo' bindgetuserinfo='onTapLogin'>微信登录</button>
</view>
<view wx:else>
  <view class='container' wx:if="{{collections}}">
    <view class='page-title'>收藏的影评↓</view>
    <view wx:for="{{collections}}" wx:for-item="collection" wx:key="{{collection.commentId}}" class='collection-container' bindtap='goToCommentDetail' data-id="{{collection.commentId}}">
    <image src='{{collection.movieImage}}' class='movie-image'></image>
    <view class='movie-description'>
      <view class='movie-title'>{{collection.movieTitle}}</view>
      <view wx:if="{{collection.type === 'text'}}">
        <view class='collection-text'>{{collection.content}}</view>
      </view>
      <view wx:if="{{collection.type === 'voice'}}">
        <view class="audio-container">
          <image src="/images/play.png" class='audio-image'></image>
          <view class='audio-duration'>{{collection.durationText}}</view>
        </view>
      </view>
      <view class='user-container'>
        <image src='{{collection.userAvatar}}' class='user-avatar'></image>
        <view class='user-name'>{{collection.userName}}</view>
      </view>
    </view>
  </view>
  </view>
  <view class="collection-empty collection-container" wx:if="{{!collections}}">
    <image class="empty-image" src="/images/star-disable.png"></image>
    <view class="empty-text">您暂时还没有收藏影评</view>
  </view>
  <button class='bottom-btn' bindtap='goToHome'>回 到 首 页</button>
</view>