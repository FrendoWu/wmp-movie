.container {
  padding: 50rpx 60rpx 0;
}
.page-title {
  display: block;
  margin: 50rpx auto;
  text-align: center;
  color: #ffa726;
  font-size: 30rpx;
  line-height: 42rpx;
}
.collection-container {
  height: 300rpx;
  width: 100%;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  margin-bottom: 50rpx;
  background-color: #ffffff;
  overflow: hidden;
}

.movie-description {
  margin-left: 200rpx;
  padding: 30rpx;
}

.movie-image {
  position: absolute;
  height: 300rpx;
  width: 200rpx;
}

.movie-title {
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}

.collection-empty {
  margin: 50rpx;
  height: 300rpx;
  width: 650rpx;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-image {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}

.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}
.bottom-btn {
  height: 100rpx;
  width: 100%;
  background-color: #ffffff;
  color: #9e9e9e;
  font-size: 40rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  text-align: center;
  border-radius: 0;
  border-top: 2rpx solid #9e9e9e;
}